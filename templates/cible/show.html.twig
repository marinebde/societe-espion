{% extends 'base.html.twig' %}

{% block title %}Cible{% endblock %}

{% block body %}
    <h1>Cible</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cible.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ cible.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ cible.firstname }}</td>
            </tr>
            <tr>
                <th>Date de Naissance</th>
                <td>{{ cible.dateOfBirth ? cible.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nationalité</th>
                <td>{{ cible.nationality }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ cible.codeName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cible_index') }}">Retour</a>

    <a href="{{ path('app_cible_edit', {'id': cible.id}) }}">Modifier</a>

    {{ include('cible/_delete_form.html.twig') }}
{% endblock %}
