{% extends 'base.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    <h1>Mission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ mission.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>Nom de Code</th>
                <td>{{ mission.codeName }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ mission.country }}</td>
            </tr>
            <tr>
                <th>Specialité</th>
                <td>{% if mission.speciality %}
                    {{ mission.speciality.name }} 
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Agent(s)</th>
                <td>{% for agents in mission.agents %}
                    {{ agents.identificationCode }}
                    {% endfor %}</td>
            </tr>
             <tr>
                <th>Contact(s)</th>
                <td>{% for contacts in mission.contacts %}
                    {{ contacts.codeName }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Cible(s)</th>
                <td>{% for cibles in mission.cibles %}
                    {{ cibles.codeName }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Planque(s)</th>
                <td>{% for planques in mission.planques %}
                    {{ planques.code }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Date Début</th>
                <td>{{ mission.startDate ? mission.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date Fin</th>
                <td>{{ mission.endDate ? mission.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if mission.status %}
                    {{ mission.status.name }} 
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Type</th>
                 <td>{% if mission.type %}
                    {{ mission.type.name }} 
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mission_index') }}">Retour</a>

    <a href="{{ path('app_mission_edit', {'id': mission.id}) }}">Modifier</a>

{% endblock %}
