{% extends 'base.html.twig' %}

{% block title %}Agent{% endblock %}

{% block body %}
    <h1>Agent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agent.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ agent.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ agent.firstname }}</td>
            </tr>
            <tr>
                <th>Date de Naissance</th>
                <td>{{ agent.dateOfBirth ? agent.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ agent.identificationCode }}</td>
            </tr>
            <tr>
                <th>Nationalité</th>
                <td>{{ agent.nationality }}</td>
            </tr>
            <tr>
                <th>Spécialité(s)</th>
                <td>{% for specialite in agent.specialite %}
                    {{ specialite.name }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_agent_index') }}">Retour</a>

    <a href="{{ path('app_agent_edit', {'id': agent.id}) }}">Modifier</a>

    {{ include('agent/_delete_form.html.twig') }}
{% endblock %}
