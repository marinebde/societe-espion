{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ contact.firstname }}</td>
            </tr>
            <tr>
                <th>Date de Naissance</th>
                <td>{{ contact.dateOfBirth ? contact.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nationalité</th>
                <td>{{ contact.nationality }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ contact.codeName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contact_index') }}">Retour</a>

    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">Modifier</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
